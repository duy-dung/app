<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Root container-->

        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/root_container"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <!--View while view is collapsed-->

            <!--Icon of floating widget -->
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_exit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                app:backgroundTint="@android:color/transparent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_0"
                app:layout_constraintVertical_bias="0.0"
                android:src="@drawable/ic_open"
                 />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                app:backgroundTint="@android:color/transparent"
                android:layout_marginTop="8dp"
                android:accessibilityTraversalBefore="@id/root_container"
                android:elevation="6dp"
                android:src="@drawable/ic_action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_3"
                tools:ignore="MissingConstraints" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="29dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_home"
                app:backgroundTint="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_exit"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_2" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                app:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_recoder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:backgroundTint="@android:color/transparent"
                android:layout_marginTop="29dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_snap"
                tools:ignore="MissingConstraints,VectorDrawableCompat" />


            <!--View while view is expanded-->
        </android.support.constraint.ConstraintLayout>

</FrameLayout>